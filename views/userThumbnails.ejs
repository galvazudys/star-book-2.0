<%include ./partials/header.ejs %>
    <div class="row">
        <div class="col s4">
            <ul class="collection">
                <% thumbnails.forEach(item=>{%>
                    <li class="collection-item avatar">
                        <img src=<%=item.image%> alt="" class="circle">
                        <span class="title">
                            <%= item.userName%>
                        </span>
                        <p>
                            <%=item.name%>
                        </p>
                        <a class="secondary-content" href='/user/<%= item.profileId %>' >
                            <i class="material-icons">remove_red_eye</i>
                        </a>
                    </li>

                    <%})%>
            </ul>
        </div>
        <div class="col s8">
            <% status.forEach(stat =>{%>
                <div class="card-panel ">
                        <h5 class="title">
                            <%=stat.userName%>
                        <span>
                            <a class="secondary-content" href='/user/<%= stat.profileId %>' >
                                <i class="material-icons">remove_red_eye</i>
                            </a>
                        </span>
                        </h5>
                    <span class="truncate black-text">
                        <br>
                        <hr>
                        <%=stat.message%>
                    </span>
                </div>
                <%})%>
        </div>
    </div>
    <div class="fixed-action-btn">
        <a href='/thumbnail/create' class="btn-floating btn-large blue">
            <i class="large material-icons">add</i>
        </a>
    </div>
    <%include ./partials/footer.ejs %>